    <style name="NexportEditTextLayoutStyle">
        <item name="android:layout_marginStart">@dimen/margin_18dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_18dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">none</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/pink</item>
    </style>

    <style name="EditTextLayoutStyle">
        <item name="android:layout_marginStart">@dimen/margin_18dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_18dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/pink</item>
    </style>

    <style name="SignUpScreenSignUpButton">
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_18dp</item>
        <item name="android:layout_marginStart">@dimen/margin_18dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius_5dp</item>
    </style>

    <style name="SignUpScreenPhoneTextField">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:inputType">phone</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="strokeColor">@color/blue</item>
        <item name="android:textCursorDrawable">@drawable/cursor_appearance</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTextStyle</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Autocomplete">
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
