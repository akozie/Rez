<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.fragment.dashboard.ChangePassword"
android:orientation="vertical">


<TextView
    android:layout_marginTop="@dimen/margin_20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Current Password"
    android:textColor="@color/black"
    android:textSize="@dimen/text_size_15sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/currentPassEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LoginPasswordFragmentEditText"
            android:hint="Password"
            android:drawablePadding="@dimen/margin_12dp"
            android:imeOptions="actionNext"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/rectangle_box_button_grey"
            android:inputType="textPassword"
            android:maxLines="1"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="New Password"
    android:textColor="@color/black"
    android:textSize="@dimen/text_size_15sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TILed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newPassEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LoginPasswordFragmentEditText"
            android:hint="Password"
            android:drawablePadding="@dimen/margin_12dp"
            android:imeOptions="actionNext"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/rectangle_box_button_grey"
            android:inputType="textPassword"
            android:maxLines="1"/>

    </com.google.android.material.textfield.TextInputLayout>

<TextView
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Confirm New Password"
    android:textColor="@color/black"
    android:textSize="@dimen/text_size_15sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TILedtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confNewPassEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LoginPasswordFragmentEditText"
            android:hint="Password"
            android:drawablePadding="@dimen/margin_12dp"
            android:imeOptions="actionNext"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/rectangle_box_button_grey"
            android:inputType="textPassword"
            android:maxLines="1"/>

   </com.google.android.material.textfield.TextInputLayout>


<TextView
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:id="@+id/changePassTv"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:textSize="17dp"
    android:text="Change Password"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/rectangle_box_button_pinc"/>


</LinearLayout>
