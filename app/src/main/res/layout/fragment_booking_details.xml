<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:fillViewport="true"
    android:layout_marginBottom="@dimen/margin_30dp"
tools:context=".ui.fragment.dashboard.BookingDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/tableImageIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/table_image"
                    android:scaleType="fitXY" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_margin="@dimen/margin_5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:id="@+id/restaurentNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2am"
                    android:fontFamily="@font/poppins_light"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_weight="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Table Name"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:fontFamily="@font/poppins_light"
                        android:drawablePadding="3dp"
                        android:textColor="@color/gray_dark"
                        app:drawableLeftCompat="@drawable/table_name2" />

                    <TextView
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="11sp"
                        android:drawablePadding="3dp"
                        android:textColor="@color/gray_dark"
                        android:drawableTint="@color/gray_dark"
                        app:drawableLeftCompat="@drawable/ic_baseline_calendar_month_24" />

                    <TextView
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:drawablePadding="3dp"
                        android:textColor="@color/gray_dark"
                        app:drawableLeftCompat="@drawable/ic_baseline_access_time_24" />


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tableNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:text="Table Name"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/dateTv"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:fontFamily="@font/poppins_medium"/>

                    <TextView
                        android:id="@+id/timeTv"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:fontFamily="@font/poppins_medium"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/acceptedTv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Your Request is Accepted"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp"
                        android:drawablePadding="5dp"
                        android:textColor="@color/green"
                        app:drawableLeftCompat="@drawable/round_right_mark2" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/pendingTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Request is Pending"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/pending2"
                        android:textColor="@color/pink"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/canceledTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Request is Canceled"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/pending2"
                        android:textColor="@color/pink"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/completedTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Request is Completed"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/round_right_mark2"
                        android:textColor="@color/green"/>

                    <!--<TextView
                        android:layout_weight="1"
                        android:id="@+id/statusTv"
                        android:layout_marginLeft="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:textColor="@color/green"/>-->

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:fontFamily="@font/poppins_light"
        android:textSize="@dimen/text_size_15sp"
        android:text="Add review" />

    <EditText
        android:id="@+id/table_review_text"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:textSize="@dimen/text_size_15sp"
        android:paddingTop="@dimen/padding_5dp"
        android:fontFamily="@font/poppins_light"
        android:paddingStart="@dimen/padding_10dp"
        android:gravity="top"
        android:layout_height="@dimen/margin_80dp"
        android:hint="Enter your review" />

    <RatingBar
        android:id="@+id/table_review_rating"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.1"
        android:layout_gravity="center"/>

        <include
            android:id="@+id/table_review_btn"
            style="@style/LoginFragmentButtonStyle"
            layout="@layout/custom_button"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp"
            app:cornerRadius="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

