<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_30dp"
tools:context=".ui.fragment.dashboard.ComplaintsFragment"
android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you have any complaint?"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18sp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_20dp"/>
<TextView
    android:layout_marginTop="@dimen/margin_20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="normal"
    android:text="Subject"
    android:textColor="@color/black"
    android:textSize="@dimen/text_size_15sp" />

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/TIL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:boxBackgroundMode="none"
    app:hintEnabled="false"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LoginPasswordFragmentEditText"
        android:hint="Subject"
        android:fontFamily="@font/poppins_medium"
        android:drawablePadding="@dimen/margin_12dp"
        android:imeOptions="actionNext"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/rectangle_box_button_grey"
        android:singleLine="true"/>

</com.google.android.material.textfield.TextInputLayout>

<TextView
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Message"
    android:textStyle="normal"
    android:textColor="@color/black"
    android:textSize="@dimen/text_size_15sp" />

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/TILed"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:boxBackgroundMode="none"
    app:hintEnabled="false"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/LoginPasswordFragmentEditText"
        android:hint="Message"
        android:gravity="start"
        android:drawablePadding="@dimen/margin_12dp"
        android:imeOptions="actionNext"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:background="@drawable/rectangle_box_button_grey"/>

</com.google.android.material.textfield.TextInputLayout>


