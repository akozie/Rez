<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.dashboard.MyProfile"
    android:background="#fff">


<LinearLayout
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/customerImageIv"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chairman_image"
                    app:civ_border_color="@color/pink"
                    app:civ_border_width="1dp" />

                <!-- <ImageView
                     android:padding="25dp"
                     android:id="@+id/customerImageIv"
                     android:layout_margin="5dp"
                     android:layout_width="200dp"
                     android:layout_height="160dp"
                     android:layout_centerHorizontal="true"
                     android:src="@drawable/user11"
                     android:scaleType="centerCrop" />-->

                <ImageView
                    android:id="@+id/imageSelectIv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignEnd="@+id/customerImageIv"
                    android:layout_alignBottom="@id/customerImageIv"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera3" />

            </RelativeLayout>


            <TextView
                android:id="@+id/first_name_tv"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/firstNameEt"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Update First Name"
                android:padding="7dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_box_button_grey"/>

            <TextView
                android:id="@+id/last_name_tv"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lastNameEt"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Update Last Name"
                android:padding="7dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_box_button_grey"/>

            <TextView
                android:id="@+id/email_tv"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/userEmailEt"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Update Email"
                android:inputType="textEmailAddress"
                android:padding="7dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_box_button_grey"/>

            <TextView
                android:id="@+id/phone_tv"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_box_button_grey"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+234"
                    android:padding="7dp"
                    android:textColor="@color/ash"
                    android:textSize="@dimen/text_size_16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/rectangle_box_button_grey" />

                <TextView
                    android:id="@+id/mobileNoEt"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Update Phone Number"
                    android:padding="7dp"
                    android:maxLength="11"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/rectangle_box_button_grey"/>

            </LinearLayout>


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveBtn"
                style="@style/LoginFragmentButtonStyle"
                android:layout_marginTop="48dp"
                android:backgroundTint="@color/blue"
                android:text="Update Profile"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp"
                app:cornerRadius="@dimen/margin_5dp"
                app:iconGravity="textStart"
                app:iconSize="@dimen/padding_24dp"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>

</LinearLayout>
