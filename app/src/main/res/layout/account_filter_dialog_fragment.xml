<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:background="@drawable/rounded_corner_pink">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:text="Filter"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:id="@+id/cancelDialog"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/cancle_white"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_marginBottom="0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No. of Guest"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:gravity="start"/>

                            <SeekBar
                                android:id="@+id/guestSeekBar"
                                android:layout_width="fill_parent"
                                android:layout_height="20dp"
                                android:layout_marginTop="10dp"
                                android:max="20"
                                android:progress="5"
                                android:thumbTint="@color/pink"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:progressBackgroundTint="@color/gray_dark"
                                android:progressTint="@color/pink" />

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="0"
                                    android:textSize="15sp"
                                    android:gravity="start"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:id="@+id/show_text"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="5"
                                    android:textSize="15sp"
                                    android:gravity="center"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="20"
                                    android:textSize="15dp"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey_light"/>

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Price Range"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:gravity="start"/>

                            <SeekBar
                                android:id="@+id/priceSeekBar"
                                android:layout_width="fill_parent"
                                android:layout_height="20dp"
                                android:layout_marginTop="10dp"
                                android:max="1500"
                                android:progress="400"
                                android:thumbTint="@color/pink"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:progressBackgroundTint="@color/gray_dark"
                                android:progressTint="@color/pink" />

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="100"
                                    android:textSize="15dp"
                                    android:gravity="start"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/show_text_price"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="400"
                                    android:textSize="15dp"
                                    android:gravity="center"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="1500"
                                    android:textSize="15dp"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey_light"/>

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/cancelTv"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Cancel"
                                android:padding="5dp"
                                android:textColor="@color/pink"
                                android:textSize="@dimen/text_size_15sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:background="@drawable/rectangle_box_square"/>

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:id="@+id/applyTv"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Apply"
                                android:padding="0dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_15sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:background="@drawable/rectangle_box_button_pink"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </RelativeLayout>
