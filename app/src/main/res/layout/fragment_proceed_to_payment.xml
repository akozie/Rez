<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.fragment.dashboard.ProceedToPayment"
android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/grey_light">

        <LinearLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/calender2"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/gray_dark"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/clock2"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/gray_dark"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/dateTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/timeTv"
                    android:text="Time"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. of People"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/people2"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/gray_dark"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Table Name"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/table_name2"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/gray_dark"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/peopleQTYTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableNameTv"
                    android:text="Table Name"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <TextView
                android:id="@+id/priceTv"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grand Total"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textColor="@color/blue"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Details"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/masterCard"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/blue">

            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/master_card3" />

                <TextView
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Master Card"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15dp" />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/paypalCard"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/grey_light">

            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/paypal3" />

                <TextView
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paypal"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold"
                    android:textSize="15dp" />
            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <EditText
        android:id="@+id/cardHolderNameEt"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Card Holder Name"
        android:padding="7dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15sp"
        android:layout_gravity="center"
        android:singleLine="true"
        android:inputType="text" />

    <EditText
        android:id="@+id/cardNumberEt"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Card Number"
        android:padding="7dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15sp"
        android:layout_gravity="center"
        android:singleLine="true"
        android:inputType="number" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_weight="1"
            android:id="@+id/expiryDateEt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Expiry Date"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:inputType="number" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/cvvNumberEt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="CVV ?"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:inputType="date" />

    </LinearLayout>

</LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/paymentTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_55dp"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Proceed To Payment"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:textSize="@dimen/text_size_16sp"
            app:cornerRadius="@dimen/margin_5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>